<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0a0dc"
    tools:context="com.example.shakib.bloodbank.UserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:text="Search Donor"
                android:id="@+id/buttonSearch"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />



            <Button
                android:layout_width="wrap_content"
                android:text="Logout"
                android:id="@+id/buttonLogout"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:text="Delete Acoount"
                android:id="@+id/buttonDelete"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/textViewName"
            android:text="Name"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewEmail"
            android:text="Email"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewAge"
            android:text="Age"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewBloodGroup"
            android:text="Blood Group"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewDistrict"
            android:text="District"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewUpazilla"
            android:text="Upazilla"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewHeight"
            android:text="Height"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewWeight"
            android:text="Weight"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewBmi"
            android:text="BMI"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewMobile"
            android:text="Phone"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewAvailability"
            android:text="Availability"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="Edit Profile"
            android:id="@+id/buttonEditProfile"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="About Developers"
            android:id="@+id/buttonAbout"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
