<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shakib.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Sign up" />
        <activity
            android:name=".LoginActivity"
            android:label="Blood Bank"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Edit Profile" />
        <activity
            android:name=".UserActivity"
            android:label="User Information" />
        <activity
            android:name=".SearchActivity"
            android:label="Donor Information" />
        <activity
            android:name=".DeleteActivity"
            android:label="Account deletion" />
        <activity
            android:name=".SearchboxActivity"
            android:label="Search Donor" />
        <activity
            android:name=".UserlistActivity"
            android:label="User list" />
        <activity
            android:label="About"
            android:name=".AboutActivity"/>
    </application>

</manifest>